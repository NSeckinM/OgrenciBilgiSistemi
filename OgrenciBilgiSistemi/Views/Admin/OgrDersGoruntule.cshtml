@model OgrDersGoruntuleViewModel

<div class="row">



    <div class="col-md-8 col-lg-9">
        <div>
            <h3>Öğrenci Bilgileri</h3>
        </div>
        <strong class="m-3"> Öğrenci numarası @Model.OgrenciNo olan @Model.Ad @Model.Soyad isimli öğrencinin bağlı olduğu Müfredat ve Dersler </strong>
        <br />
        <hr />

        <h4 class="m-3"> Müfredat Adı </h4>
        <h6 class="m-3">@Model.MufredatAdi</h6>
        @if (Model.Dersler.Count == 0)
        {
            <br />

            <h3 class="alert-danger m-5"> Henüz Ögrencinin Üzerine Kayıtlı Herhangi Bir Ders yoktur ! </h3>

            <br />
        }
        else
        {
            <div>
                <table class="table table-hover">
                    <thead>
                        <tr>

                            <th>Ders Kodu</th>
                            <th>Ders Adı</th>
                            <th>Ders Durumu</th>
                            <th>Ders Kredisi</th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.Dersler)
                        {
                            <tr>
                                <td>
                                    <span>@item.Ders.DersKodu</span>
                                </td>
                                <td>
                                    <span>@item.Ders.DersAdi</span>
                                </td>
                                <td>
                                    <span>@item.Ders.Durum</span>
                                </td>
                                <td>
                                    <span>@item.Ders.Kredi</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

    </div>
</div>
<a class="btn btn-outline-dark" asp-controller="Admin" asp-action="Index"> Ana Sayfaya Geri Dön</a>
