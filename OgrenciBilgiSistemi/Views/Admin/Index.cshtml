@model List<Ogrenci>

<div class="row">

    <div class="col-lg-12">
        <h3>Seçenekler</h3>
        <div>
            <a class="list-group-item list-group-item-action active" asp-controller="Admin" asp-action="Index">Ögrenci İşlemleri</a>
            <a class="list-group-item list-group-item-action" asp-controller="Admin" asp-action="IndexMuf">Müfredat İşlemleri</a>
            <a class="list-group-item list-group-item-action" asp-controller="Admin" asp-action="IndexDers">Ders İşlemleri</a>
        </div>
    </div>

    <div class="col-md-8 col-lg-9">

        <h3>Kayıtlı Öğrenciler</h3>

        <div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Ögrenci Numarası</th>
                        <th>Tc Kimlik Numarası</th>
                        <th>Adı Soyadı</th>
                        <th>DoğumYeri/Tarihi</th>
                        <th>İl/İlçe</th>
                        <th>Adress</th>
                        <th>Email</th>
                        <th>Gsm</th>
                        <th>Müfredat/Dersler</th>
                        <th>Düzenle</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            <strong>@item.OgrenciNo</strong>
                        </td>
                        <td>
                            <span>@item.Kimlik.TcNo</span>
                        </td>
                        <td>
                            <span>@item.Kimlik.Ad @item.Kimlik.Soyad</span>
                        </td>
                        <td>
                            <span>@item.Kimlik.DogumYeri @item.Kimlik.DogumTarihi</span>
                        </td>
                        <td>
                            <span>@item.Kimlik.Iletisim.Il/@item.Kimlik.Iletisim.Ilce</span>
                        </td>
                        <td>
                            <span>@item.Kimlik.Iletisim.Adres</span>
                        </td>
                        <td>
                            <span>@item.Kimlik.Iletisim.Email</span>
                        </td>
                        <td>
                            <span>@item.Kimlik.Iletisim.Gsm</span>
                        </td>
                        <td>
                            <a asp-controller="Admin" asp-action="Index" asp-route-infId="@item.Id" class="btn btn-outline-success">Görüntüle</a>
                        </td>
                        <td>
                            <a asp-controller="Admin" asp-action="Index" asp-route-infId="@item.Id" class="btn btn-outline-success">Düzenle</a>
                        </td>
                    </tr>
                    }
                </tbody>

            </table>
        </div>

    </div>
</div>