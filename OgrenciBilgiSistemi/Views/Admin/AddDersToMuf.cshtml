@model AddDersToMufViewModel

<div class="row">



    <div class="col-md-8 col-lg-9">
        <div>
            <h3>Ders Bilgileri</h3>
        </div>
        <strong class="m-3"> Sistemde kayıtlı bulunan tüm dersler aşağıda listelenmiştir </strong>
        <br />
        <hr />

        @if (Model.Derslervm.Count == 0)
        {
            <br />

            <h3 class="alert-danger m-5">  Herhangi Bir Ders yoktur ! </h3>

            <br />
        }
        else
        {
            <div>
                <table class="table table-hover">
                    <thead>
                        <tr>

                            <th>Ders Kodu</th>
                            <th>Ders Adı</th>
                            <th>Ders Durumu</th>
                            <th>Ders Kredisi</th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.Derslervm)
                        {
                            <tr>
                                <td>
                                    <span>@item.DersKodu</span>
                                </td>
                                <td>
                                    <span>@item.DersAdi</span>
                                </td>
                                <td>
                                    <span>@item.Durum</span>
                                </td>
                                <td>
                                    <span>@item.Kredi</span>
                                </td>
                                <td>
                                    <a class="btn btn-outline-primary" asp-controller="Admin" asp-action="AddDersToMuf2" asp-route-id="@item.Id" asp-route-mufid="@Model.Id">Ekle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

    </div>
</div>

<a class="btn btn-outline-dark" asp-controller="Admin" asp-action="IndexMufredat"> Müfredat İşlemlerine Geri Dön</a>