@model DuzenleDersViewModel

<form method="post" asp-controller="Admin" asp-action="EditDers">

    <input type="hidden" asp-for="Id" a/>
    <div class="form-group">

        <label asp-for="DersKodu"></label>
        <input asp-for="DersKodu" class="form-control" />
        <span asp-validation-for="DersKodu" class="text-danger"></span>

    </div>
    <div class="form-group">

        <label asp-for="DersAdi"></label>
        <input asp-for="DersAdi" class="form-control" />
        <span asp-validation-for="DersAdi" class="text-danger"></span>

    </div>
    <div class="form-group">

        <label asp-for="Kredi"></label>
        <input asp-for="Kredi" class="form-control" />
        <span asp-validation-for="Kredi" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="Durum">Dersin Durumu</label>
        <select asp-for="Durum" class="custom-select">
            <option value="True">Aktif</option>
            <option value="False">Pasif</option>
        </select>
    </div>

    <button class="btn btn-outline-primary">Kaydet</button>

</form>

<div class="mt-3">
    <a asp-controller="Admin" asp-action="IndexDers" class="btn btn-primary">Geri Dön</a>
</div>