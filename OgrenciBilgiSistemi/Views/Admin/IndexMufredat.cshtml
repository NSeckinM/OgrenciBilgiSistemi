@model List<Mufredat>

<div class="row">

    <div class="col-md-4 col-lg-6">
        <div>

            <a class="btn btn-primary" asp-controller="Admin" asp-action="CreateMuf">Yeni Müfredat Oluştur</a>

        </div>
    </div>

    <div class="col-md-8 col-lg-9">
        <div>
            <h3>Mevcut Müfredatlar</h3>
        </div>

        <div>
            <table class="table table-hover">
                <thead>
                    <tr>

                        <th>Müfredat Adı</th>

                        <th>Düzenle</th>

                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.MufredatAdi</strong>
                            </td>
                            @*<td>
                                                @foreach (var ders in Model)
                                {
                                                <span>@ders.Ders.DersAdi</span>

                                }
                                            </td>*@

                            <td>
                                <a asp-controller="Admin" asp-action="EditMuf" asp-route-id="@item.Id" class="btn btn-outline-success">Düzenle</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>

    </div>
</div>

<a asp-controller="Admin" asp-action="Index" class="btn btn-outline-dark">Ana sayfaya Geri Dön</a>
